MACRO(decide_patch_version)
  # force to use newest patch version
  if (${LLVM_RECOMMAND_VERSION} STREQUAL "3.4")
    SET(LLVM_PATCH_VERSION "3.4.2")
    SET(CLANG_PATCH_VERSION "3.4.2")
    SET(RT_PATCH_VERSION "3.4")
  elseif (${LLVM_RECOMMAND_VERSION} STREQUAL "3.5")
    SET(LLVM_PATCH_VERSION "3.5.0")
    SET(CLANG_PATCH_VERSION "3.5.0")
    SET(RT_PATCH_VERSION "3.5.0")
  else()
    message(FATAL_ERROR "Unsupported LLVM version : ${LLVM_RECOMMAND_VERSION}")
  endif()
ENDMACRO()


